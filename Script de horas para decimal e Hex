<html>
<script type="text/javascript">
    let a = prompt("Digite o seu tempo no formato HH:MM:SS");
    //alert(a);
    let b = a.split(":");
    h = parseInt(b[0]);
    m = parseInt(b[1]);
    s = parseInt(b[2]);
    //((h * 60 + m) * 60 + s) * 1000
    let resms = ((h * 60 + m) * 60 + s) * 1000;
    let resmshex = resms.toString(16);
    //alert(resmshex);
    let resmsL = resmshex + "L";
    //alert(resmsL);
    document.write("Valor inserido = " + a + "<br><br> Resultado em Milissegundos = " + resms + "<br><br>" + "Resultado em Hexadecimal = 0x" + resmshex +"<br><br>" + "Resultado pra Smali = 0x"+ resmsL);
    
    

</script>

</html>
